        <div class="system-status">
            <div class="status-dot"></div>
            <span>System Online</span>
            <div class="status-line"></div>
        </div>

        <!-- Title -->
        <h1 class="page-title">ScreenThread</h1>
        <p class="page-subtitle"><span>&gt;</span> actor_link_scanner <span>//</span> find shared filmographies</p>

        <!-- Search Panel -->
        <div class="search-panel">
            <div class="panel-header">
                Query Interface
                <span class="header-line"></span>
            </div>

            <div class="fields-grid">
                <!-- Actor 1 -->
                <div class="field-container">
                    <label class="field-label" for="actor1">
                        <span class="prompt">$</span> actor_01
                    </label>
                    <div class="terminal-input-wrap">
                        <span class="terminal-prefix">&gt;</span>
                        <input
                            type="text"
                            id="actor1"
                            name="q"
                            class="terminal-input"
                            placeholder="enter name..."
                            autocomplete="off"
                            hx-get="/api/actors/search"
                            hx-trigger="keyup changed delay:300ms"
                            hx-target="#suggestions1"
                            hx-include="this"
                            hx-vals='{"field": "actor1"}'
                        >
                        <button type="button" class="clear-btn" onclick="clearActor('actor1')" title="Clear">
                            <span class="material-icons">close</span>
                        </button>
                    </div>
                    <div class="suggestions" id="suggestions1"></div>
