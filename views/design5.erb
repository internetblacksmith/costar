<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ScreenThread - Y2K Edition</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Fredoka:wght@400;500;600;700&family=Nunito:wght@400;600;700;800&display=swap">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <script src="https://unpkg.com/htmx.org@1.9.6"></script>
  <style>
    *, *::before, *::after {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --lavender: #e0d4f7;
      --baby-blue: #c4e0f9;
      --soft-pink: #f7d4e0;
      --silver: #c0c0c0;
      --white: #ffffff;
      --electric-blue: #0066ff;
      --chrome-dark: #8a8a8a;
      --chrome-mid: #b0b0b0;
      --chrome-light: #e8e8e8;
      --radius-bubble: 28px;
      --radius-pill: 40px;
    }

    body {
      font-family: "Nunito", sans-serif;
      background: linear-gradient(135deg, #e0d4f7 0%, #c4e0f9 30%, #f7d4e0 60%, #c4e0f9 100%);
      min-height: 100vh;
      overflow-x: hidden;
      cursor: crosshair;
      color: #333;
      padding-bottom: 100px;
    }

    /* ============ FLOATING BACKGROUND ORBS ============ */
    .orb {
      position: fixed;
      border-radius: 50%;
      filter: blur(60px);
      opacity: 0.45;
      z-index: 0;
      pointer-events: none;
    }

    .orb--1 {
      width: 320px;
      height: 320px;
      background: radial-gradient(circle, #f7d4e0 0%, #e0d4f7 100%);
      top: -80px;
      left: -60px;
      animation: floatOrb1 14s ease-in-out infinite;
    }

    .orb--2 {
      width: 260px;
      height: 260px;
      background: radial-gradient(circle, #c4e0f9 0%, #d4f7e0 100%);
      top: 30%;
      right: -80px;
      animation: floatOrb2 18s ease-in-out infinite;
    }

    .orb--3 {
      width: 200px;
      height: 200px;
      background: radial-gradient(circle, #e0d4f7 0%, #f7e0d4 100%);
      bottom: 10%;
      left: 10%;
      animation: floatOrb3 16s ease-in-out infinite;
    }

    .orb--4 {
      width: 180px;
      height: 180px;
      background: radial-gradient(circle, #c4e0f9 0%, #f7d4e0 100%);
      top: 60%;
      left: 55%;
      animation: floatOrb1 20s ease-in-out infinite reverse;
    }

    .orb--5 {
      width: 140px;
      height: 140px;
      background: radial-gradient(circle, #f7e0d4 0%, #c4e0f9 100%);
      top: 15%;
      left: 40%;
      animation: floatOrb2 12s ease-in-out infinite;
    }

    @keyframes floatOrb1 {
      0%, 100% { transform: translate(0, 0) scale(1); }
      25% { transform: translate(30px, -40px) scale(1.05); }
      50% { transform: translate(-20px, 20px) scale(0.95); }
      75% { transform: translate(40px, 30px) scale(1.08); }
    }

    @keyframes floatOrb2 {
      0%, 100% { transform: translate(0, 0) scale(1); }
      33% { transform: translate(-40px, 30px) scale(1.1); }
      66% { transform: translate(30px, -20px) scale(0.9); }
    }

    @keyframes floatOrb3 {
      0%, 100% { transform: translate(0, 0); }
      50% { transform: translate(50px, -30px); }
    }

    /* ============ SPARKLE DECORATIONS ============ */
    .sparkle {
      position: fixed;
      pointer-events: none;
      z-index: 1;
      font-size: 18px;
      color: var(--silver);
      opacity: 0.6;
      animation: sparkleFloat 6s ease-in-out infinite;
    }

    .sparkle--1 { top: 8%; left: 12%; animation-delay: 0s; font-size: 22px; color: #d4b8f0; }
    .sparkle--2 { top: 20%; right: 15%; animation-delay: 1.5s; font-size: 16px; color: #b8d4f0; }
    .sparkle--3 { top: 45%; left: 6%; animation-delay: 3s; font-size: 20px; color: #f0b8d4; }
    .sparkle--4 { top: 70%; right: 8%; animation-delay: 0.8s; font-size: 14px; color: #d4f0b8; }
    .sparkle--5 { top: 85%; left: 25%; animation-delay: 2.2s; font-size: 24px; color: #e0d4f7; }
    .sparkle--6 { top: 12%; left: 70%; animation-delay: 4s; font-size: 18px; color: #c0c0c0; }
    .sparkle--7 { top: 55%; right: 20%; animation-delay: 1s; font-size: 12px; color: #f7d4e0; }

    @keyframes sparkleFloat {
      0%, 100% { transform: translateY(0) rotate(0deg); opacity: 0.4; }
      50% { transform: translateY(-12px) rotate(180deg); opacity: 0.9; }
    }

    /* ============ CD-ROM RAINBOW REFRACTION ============ */
    .cd-refraction {
      position: fixed;
      width: 300px;
      height: 300px;
      border-radius: 50%;
      background: conic-gradient(
        from 0deg,
        rgba(255, 0, 0, 0.06),
        rgba(255, 165, 0, 0.06),
        rgba(255, 255, 0, 0.06),
        rgba(0, 128, 0, 0.06),
        rgba(0, 0, 255, 0.06),
        rgba(75, 0, 130, 0.06),
        rgba(238, 130, 238, 0.06),
        rgba(255, 0, 0, 0.06)
      );
      top: 50%;
      right: -100px;
      transform: translateY(-50%);
      z-index: 0;
      pointer-events: none;
      animation: cdSpin 30s linear infinite;
    }

    .cd-refraction::after {
      content: "";
      position: absolute;
      inset: 40%;
      border-radius: 50%;
      background: var(--lavender);
      opacity: 0.3;
    }

    @keyframes cdSpin {
      from { transform: translateY(-50%) rotate(0deg); }
      to { transform: translateY(-50%) rotate(360deg); }
    }

    /* ============ Y2K PILL DECORATIONS ============ */
    .y2k-pill {
      position: fixed;
      border-radius: var(--radius-pill);
      pointer-events: none;
      z-index: 0;
      opacity: 0.15;
    }

    .y2k-pill--1 {
      width: 120px;
      height: 40px;
      background: linear-gradient(90deg, var(--lavender), var(--baby-blue));
      top: 25%;
      left: 3%;
      transform: rotate(-15deg);
    }

    .y2k-pill--2 {
      width: 80px;
      height: 30px;
      background: linear-gradient(90deg, var(--soft-pink), var(--lavender));
      top: 75%;
      right: 5%;
      transform: rotate(20deg);
    }

    .y2k-pill--3 {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      background: linear-gradient(180deg, var(--baby-blue), var(--soft-pink));
      bottom: 30%;
      left: 80%;
    }

    /* ============ FLOATING NAV DOCK ============ */
    .nav-dock {
      position: fixed;
      bottom: 24px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      gap: 6px;
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(16px);
      -webkit-backdrop-filter: blur(16px);
      border: 2px solid rgba(255, 255, 255, 0.9);
      border-radius: var(--radius-pill);
      padding: 8px 14px;
      z-index: 1000;
      box-shadow:
        0 4px 20px rgba(0, 0, 0, 0.08),
        inset 0 1px 0 rgba(255, 255, 255, 0.8);
    }

    .nav-dock a {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 42px;
      height: 42px;
      border-radius: 50%;
      background: linear-gradient(135deg, var(--lavender), var(--baby-blue));
      color: #555;
      text-decoration: none;
      font-family: "Fredoka", sans-serif;
      font-weight: 600;
      font-size: 14px;
      transition: all 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
      border: 2px solid rgba(255, 255, 255, 0.6);
      cursor: pointer;
    }

    .nav-dock a:hover {
      transform: translateY(-6px) scale(1.15);
      background: linear-gradient(135deg, var(--electric-blue), #3399ff);
      color: white;
      box-shadow: 0 6px 16px rgba(0, 102, 255, 0.3);
    }

    .nav-dock a.active {
      background: linear-gradient(135deg, var(--electric-blue), #3399ff);
      color: white;
      box-shadow: 0 3px 10px rgba(0, 102, 255, 0.25);
    }

    .nav-dock a.home-link {
      background: linear-gradient(135deg, var(--soft-pink), #f0a0c0);
      width: 46px;
      height: 46px;
      margin: -2px 4px -2px 0;
    }

    .nav-dock a.home-link:hover {
      background: linear-gradient(135deg, #ff6699, #ff3377);
      color: white;
    }

    /* ============ MAIN WRAPPER ============ */
    .page-wrapper {
      position: relative;
      z-index: 2;
      max-width: 820px;
      margin: 0 auto;
      padding: 32px 20px 40px;
    }

    /* ============ OS WINDOW FRAME ============ */
    .window-frame {
      background: var(--white);
      border-radius: 20px;
      border: 2px solid var(--chrome-mid);
      box-shadow:
        0 8px 40px rgba(0, 0, 0, 0.1),
        0 2px 8px rgba(0, 0, 0, 0.06),
        inset 0 1px 0 rgba(255, 255, 255, 1);
      overflow: hidden;
    }

    .window-titlebar {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 10px 16px;
      background: linear-gradient(180deg, #f2f2f2 0%, #dcdcdc 100%);
      border-bottom: 1px solid var(--chrome-mid);
      user-select: none;
    }

    .window-dots {
      display: flex;
      gap: 7px;
    }

    .window-dot {
      width: 13px;
      height: 13px;
      border-radius: 50%;
      border: 1px solid rgba(0, 0, 0, 0.12);
    }

    .window-dot--close { background: #ff6058; }
    .window-dot--minimize { background: #ffbd2e; }
    .window-dot--maximize { background: #27ca40; }

    .window-title {
      flex: 1;
      text-align: center;
      font-family: "Nunito", sans-serif;
      font-size: 12px;
      font-weight: 700;
      color: #777;
      letter-spacing: 0.5px;
    }

    .window-body {
      padding: 36px 32px 40px;
    }

    /* ============ CHROME TITLE ============ */
    .site-header {
      text-align: center;
      margin-bottom: 8px;
    }

    .chrome-title {
      font-family: "Fredoka", sans-serif;
      font-size: 52px;
      font-weight: 700;
      background: linear-gradient(180deg, #e8e8e8, #ffffff, #b0b0b0, #e8e8e8);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.15));
      letter-spacing: -1px;
      line-height: 1.1;
      position: relative;
      display: inline-block;
    }

    .chrome-title::before {
      content: "ScreenThread";
      position: absolute;
      inset: 0;
      background: linear-gradient(180deg, #d0d0d0, #f8f8f8, #a0a0a0, #d8d8d8);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      z-index: -1;
      transform: translate(1px, 1px);
    }

    .site-subtitle {
      font-family: "Nunito", sans-serif;
      font-size: 15px;
      font-weight: 600;
      color: #999;
      margin-top: 4px;
      letter-spacing: 2px;
      text-transform: uppercase;
    }

    .sparkle-row {
      display: flex;
      justify-content: center;
      gap: 16px;
      margin-top: 10px;
      margin-bottom: 28px;
      font-size: 18px;
      color: var(--silver);
    }

    .sparkle-row span {
      animation: sparkleFloat 3s ease-in-out infinite;
    }

    .sparkle-row span:nth-child(2) { animation-delay: 0.4s; }
    .sparkle-row span:nth-child(3) { animation-delay: 0.8s; }
    .sparkle-row span:nth-child(4) { animation-delay: 1.2s; }
    .sparkle-row span:nth-child(5) { animation-delay: 1.6s; }

    /* ============ IRIDESCENT SEARCH CARD ============ */
    .search-card {
      background: linear-gradient(
        135deg,
        rgba(224, 212, 247, 0.35) 0%,
        rgba(196, 224, 249, 0.35) 25%,
        rgba(247, 212, 224, 0.35) 50%,
        rgba(212, 247, 224, 0.35) 75%,
        rgba(224, 212, 247, 0.35) 100%
      );
      background-size: 300% 300%;
      animation: iridescent 8s ease-in-out infinite;
      border: 2px solid rgba(255, 255, 255, 0.8);
      border-radius: var(--radius-bubble);
      padding: 28px 24px 24px;
      position: relative;
      overflow: hidden;
    }

    .search-card::before {
      content: "";
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: conic-gradient(
        from 0deg at 50% 50%,
        rgba(255, 0, 0, 0.03),
        rgba(255, 165, 0, 0.03),
        rgba(255, 255, 0, 0.03),
        rgba(0, 128, 0, 0.03),
        rgba(0, 102, 255, 0.03),
        rgba(75, 0, 130, 0.03),
        rgba(238, 130, 238, 0.03),
        rgba(255, 0, 0, 0.03)
      );
      animation: cdSpin 20s linear infinite;
      pointer-events: none;
    }

    @keyframes iridescent {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    .search-card-title {
      font-family: "Fredoka", sans-serif;
      font-size: 20px;
      font-weight: 600;
      color: #555;
      text-align: center;
      margin-bottom: 22px;
      position: relative;
      z-index: 1;
    }

    .search-card-title .material-icons {
      font-size: 22px;
      vertical-align: -4px;
      margin-right: 6px;
      color: var(--electric-blue);
    }

    .search-fields {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
      position: relative;
      z-index: 1;
    }

    .field-container {
      position: relative;
    }

    .field-label {
      font-family: "Fredoka", sans-serif;
      font-size: 13px;
      font-weight: 600;
      color: #888;
      text-transform: uppercase;
      letter-spacing: 1.5px;
      margin-bottom: 8px;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .field-label .label-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      display: inline-block;
    }

    .field-label .label-dot--1 { background: var(--lavender); }
    .field-label .label-dot--2 { background: var(--soft-pink); }

    .input-wrapper {
      position: relative;
    }

    .input-wrapper input[type="text"] {
      width: 100%;
      padding: 14px 42px 14px 16px;
      font-family: "Nunito", sans-serif;
      font-size: 15px;
      font-weight: 600;
      color: #333;
      background: rgba(255, 255, 255, 0.85);
      border: 2px solid rgba(192, 192, 192, 0.4);
      border-radius: 18px;
      outline: none;
      transition: all 0.3s ease;
      cursor: crosshair;
    }

    .input-wrapper input[type="text"]::placeholder {
      color: #bbb;
      font-weight: 400;
    }

    .input-wrapper input[type="text"]:focus {
      border-color: var(--electric-blue);
      background: rgba(255, 255, 255, 0.95);
      box-shadow: 0 0 0 4px rgba(0, 102, 255, 0.1);
    }

    .clear-btn {
      position: absolute;
      right: 10px;
      top: 50%;
      transform: translateY(-50%);
      width: 28px;
      height: 28px;
      border-radius: 50%;
      border: none;
      background: linear-gradient(135deg, #f0f0f0, #ddd);
      color: #999;
      font-size: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.2s ease;
      font-family: "Nunito", sans-serif;
      line-height: 1;
    }

    .clear-btn:hover {
      background: linear-gradient(135deg, var(--soft-pink), #f0a0c0);
      color: white;
      transform: translateY(-50%) scale(1.1);
    }

    .suggestions {
      position: absolute;
      top: calc(100% + 6px);
      left: 0;
      right: 0;
      z-index: 100;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border-radius: 16px;
      border: 2px solid rgba(192, 192, 192, 0.3);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      max-height: 240px;
      overflow-y: auto;
    }

    .suggestions:empty {
      display: none;
    }

    .suggestions .suggestion-item {
      padding: 10px 14px;
      font-family: "Nunito", sans-serif;
      font-size: 14px;
      color: #444;
      cursor: pointer;
      transition: all 0.15s ease;
      border-bottom: 1px solid rgba(0, 0, 0, 0.04);
    }

    .suggestions .suggestion-item:last-child {
      border-bottom: none;
    }

    .suggestions .suggestion-item:hover {
      background: linear-gradient(135deg, var(--lavender), var(--baby-blue));
      color: #222;
    }

    /* ============ 3D COMPARE BUTTON ============ */
    .compare-section {
      text-align: center;
      margin-top: 28px;
      position: relative;
      z-index: 1;
    }

    .compare-btn {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 16px 44px;
      font-family: "Fredoka", sans-serif;
      font-size: 18px;
      font-weight: 600;
      color: white;
      background: linear-gradient(180deg, #3399ff 0%, var(--electric-blue) 100%);
      border: none;
      border-bottom: 5px solid #0044aa;
      border-radius: var(--radius-pill);
      cursor: pointer;
      transition: all 0.15s ease;
      letter-spacing: 0.5px;
      position: relative;
      text-shadow: 0 1px 2px rgba(0, 0, 0, 0.15);
    }

    .compare-btn:hover {
      background: linear-gradient(180deg, #55aaff 0%, #1177ff 100%);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(0, 102, 255, 0.3);
    }

    .compare-btn:active {
      transform: translateY(3px);
      border-bottom-width: 2px;
      box-shadow: 0 2px 8px rgba(0, 102, 255, 0.2);
    }

    .compare-btn .material-icons {
      font-size: 22px;
    }

    .compare-btn::after {
      content: "✦";
      position: absolute;
      right: -20px;
      top: -10px;
      font-size: 16px;
      color: var(--electric-blue);
      animation: sparkleFloat 2s ease-in-out infinite;
    }

    /* ============ TIMELINE / RESULTS ============ */
    .timeline-section {
      margin-top: 32px;
    }

    #timeline {
      min-height: 40px;
      border-radius: var(--radius-bubble);
      position: relative;
    }

    #timeline:empty::before {
      content: "Results will appear here...";
      display: block;
      text-align: center;
      padding: 40px 20px;
      font-family: "Nunito", sans-serif;
      font-size: 14px;
      color: #bbb;
      font-style: italic;
      background: linear-gradient(
        135deg,
        rgba(224, 212, 247, 0.15),
        rgba(196, 224, 249, 0.15),
        rgba(247, 212, 224, 0.15)
      );
      border-radius: var(--radius-bubble);
      border: 2px dashed rgba(192, 192, 192, 0.3);
    }

    /* ============ Y2K FOOTER BADGE ============ */
    .y2k-badge {
      text-align: center;
      margin-top: 28px;
      position: relative;
      z-index: 1;
    }

    .y2k-badge-inner {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 8px 20px;
      background: linear-gradient(
        135deg,
        rgba(224, 212, 247, 0.5),
        rgba(196, 224, 249, 0.5),
        rgba(247, 212, 224, 0.5)
      );
      background-size: 200% 200%;
      animation: iridescent 6s ease-in-out infinite;
      border-radius: var(--radius-pill);
      border: 1px solid rgba(255, 255, 255, 0.7);
      font-family: "Fredoka", sans-serif;
      font-size: 12px;
      font-weight: 500;
      color: #999;
      letter-spacing: 1px;
    }

    .y2k-badge-inner span {
      font-size: 14px;
    }

    /* ============ SCROLLBAR ============ */
    ::-webkit-scrollbar {
      width: 8px;
    }

    ::-webkit-scrollbar-track {
      background: rgba(224, 212, 247, 0.2);
      border-radius: 10px;
    }

    ::-webkit-scrollbar-thumb {
      background: linear-gradient(180deg, var(--lavender), var(--baby-blue));
      border-radius: 10px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: linear-gradient(180deg, var(--electric-blue), #3399ff);
    }

    /* ============ RESPONSIVE ============ */
    @media (max-width: 640px) {
      .search-fields {
        grid-template-columns: 1fr;
        gap: 16px;
      }

      .chrome-title {
        font-size: 36px;
      }

      .window-body {
        padding: 24px 16px 28px;
      }

      .search-card {
        padding: 20px 16px 18px;
      }

      .compare-btn {
        padding: 14px 32px;
        font-size: 16px;
      }

      .nav-dock {
        bottom: 14px;
        padding: 6px 10px;
        gap: 4px;
      }

      .nav-dock a {
        width: 36px;
        height: 36px;
        font-size: 12px;
      }

      .nav-dock a.home-link {
        width: 40px;
        height: 40px;
      }

      .page-wrapper {
        padding: 20px 12px 30px;
      }
    }

    /* ============ HTMX LOADING INDICATOR ============ */
    .htmx-indicator {
      display: none;
    }

    .htmx-request .htmx-indicator {
      display: inline-block;
    }

    .htmx-request.htmx-indicator {
      display: inline-block;
    }

    .loader-bubble {
      display: inline-flex;
      gap: 4px;
      align-items: center;
      padding: 8px 0;
      justify-content: center;
      width: 100%;
    }

    .loader-bubble span {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: var(--electric-blue);
      animation: bubbleBounce 1.2s ease-in-out infinite;
    }

    .loader-bubble span:nth-child(2) { animation-delay: 0.15s; }
    .loader-bubble span:nth-child(3) { animation-delay: 0.3s; }

    @keyframes bubbleBounce {
      0%, 80%, 100% { transform: scale(0.6); opacity: 0.4; }
      40% { transform: scale(1); opacity: 1; }
    }

    /* ============ HIDDEN FIELDS ============ */
    .hidden-fields {
      display: none;
    }
  </style>
</head>
<body>

  <!-- Background Orbs -->
  <div class="orb orb--1"></div>
  <div class="orb orb--2"></div>
  <div class="orb orb--3"></div>
  <div class="orb orb--4"></div>
  <div class="orb orb--5"></div>

  <!-- Sparkle Decorations -->
  <div class="sparkle sparkle--1">✦</div>
  <div class="sparkle sparkle--2">✧</div>
  <div class="sparkle sparkle--3">★</div>
  <div class="sparkle sparkle--4">✦</div>
  <div class="sparkle sparkle--5">✧</div>
  <div class="sparkle sparkle--6">★</div>
  <div class="sparkle sparkle--7">✦</div>

  <!-- CD-ROM Refraction -->
  <div class="cd-refraction"></div>

  <!-- Y2K Pill Decorations -->
  <div class="y2k-pill y2k-pill--1"></div>
  <div class="y2k-pill y2k-pill--2"></div>
  <div class="y2k-pill y2k-pill--3"></div>

  <!-- Main Page -->
  <div class="page-wrapper">

    <!-- OS Window Frame -->
    <div class="window-frame">
      <div class="window-titlebar">
        <div class="window-dots">
          <div class="window-dot window-dot--close"></div>
          <div class="window-dot window-dot--minimize"></div>
          <div class="window-dot window-dot--maximize"></div>
        </div>
        <div class="window-title">screenthread.app &mdash; actor comparison tool</div>
        <div class="window-dots" style="visibility: hidden;">
          <div class="window-dot"></div>
          <div class="window-dot"></div>
          <div class="window-dot"></div>
        </div>
      </div>

      <div class="window-body">

        <!-- Header -->
        <div class="site-header">
          <div class="chrome-title">ScreenThread</div>
          <div class="site-subtitle">Actor Comparison Tool</div>
        </div>

        <div class="sparkle-row">
          <span>✦</span>
          <span>✧</span>
          <span>★</span>
          <span>✧</span>
          <span>✦</span>
        </div>

        <!-- Search Card -->
        <div class="search-card">
          <div class="search-card-title">
            <span class="material-icons">people</span>
            Pick Two Actors to Compare
          </div>

          <div class="search-fields">
            <!-- Actor 1 -->
            <div class="field-container">
              <div class="field-label">
                <span class="label-dot label-dot--1"></span>
                Actor 1
              </div>
              <div class="input-wrapper">
                <input
                  type="text"
                  id="actor1"
                  name="q"
                  placeholder="Search actor..."
                  autocomplete="off"
                  hx-get="/api/actors/search"
                  hx-trigger="keyup changed delay:300ms"
                  hx-target="#suggestions1"
                  hx-include="this"
                  hx-vals='{"field": "actor1"}'
                >
                <button type="button" class="clear-btn" onclick="clearActor('actor1')" title="Clear">&times;</button>
              </div>
              <div class="suggestions" id="suggestions1"></div>
            </div>

            <!-- Actor 2 -->
            <div class="field-container">
              <div class="field-label">
                <span class="label-dot label-dot--2"></span>
                Actor 2
              </div>
              <div class="input-wrapper">
                <input
                  type="text"
                  id="actor2"
                  name="q"
                  placeholder="Search actor..."
                  autocomplete="off"
                  hx-get="/api/actors/search"
                  hx-trigger="keyup changed delay:300ms"
                  hx-target="#suggestions2"
                  hx-include="this"
                  hx-vals='{"field": "actor2"}'
                >
                <button type="button" class="clear-btn" onclick="clearActor('actor2')" title="Clear">&times;</button>
              </div>
              <div class="suggestions" id="suggestions2"></div>
            </div>
          </div>

          <!-- Compare Button -->
          <div class="compare-section">
            <button
              type="button"
              class="compare-btn"
              hx-get="/api/actors/compare"
              hx-target="#timeline"
              hx-vals="js:{actor1_id: document.getElementById('actor1_id_backup').value, actor1_name: document.getElementById('actor1_name_backup').value, actor2_id: document.getElementById('actor2_id_backup').value, actor2_name: document.getElementById('actor2_name_backup').value}"
            >
              <span class="material-icons">compare_arrows</span>
              Compare
            </button>
          </div>
        </div>

        <!-- Hidden Fields -->
        <div class="hidden-fields">
          <input type="hidden" id="actor1_id" value="">
          <input type="hidden" id="actor1_name" value="">
          <input type="hidden" id="actor1_id_backup" value="">
          <input type="hidden" id="actor1_name_backup" value="">
          <input type="hidden" id="actor2_id" value="">
          <input type="hidden" id="actor2_name" value="">
          <input type="hidden" id="actor2_id_backup" value="">
          <input type="hidden" id="actor2_name_backup" value="">
        </div>

        <!-- Timeline Results -->
        <div class="timeline-section">
          <div id="timeline"></div>
        </div>

        <!-- Y2K Badge -->
        <div class="y2k-badge">
          <div class="y2k-badge-inner">
            <span>✧</span> Y2K CERTIFIED <span>★</span> RETRO-FUTURISTIC <span>✧</span>
          </div>
        </div>

      </div>
    </div>

  </div>

  <!-- Floating Nav Dock -->
  <nav class="nav-dock">
    <a href="/" class="home-link" title="Home"><span class="material-icons" style="font-size: 20px;">home</span></a>
    <a href="/1" title="Design 1">1</a>
    <a href="/2" title="Design 2">2</a>
    <a href="/3" title="Design 3">3</a>
    <a href="/4" title="Design 4">4</a>
    <a href="/5" class="active" title="Design 5">5</a>
  </nav>

  <script>
    function selectActor(id, name, field) {
        document.getElementById(field + '_id').value = id;
        document.getElementById(field + '_name').value = name;
        document.getElementById(field + '_id_backup').value = id;
        document.getElementById(field + '_name_backup').value = name;
        document.getElementById(field).closest('.field-container').querySelector('.suggestions').innerHTML = '';
        const input = document.getElementById(field);
        input.value = name;
        input.disabled = true;
        input.style.opacity = '0.7';
    }
    function clearActor(field) {
        document.getElementById(field + '_id').value = '';
        document.getElementById(field + '_name').value = '';
        document.getElementById(field + '_id_backup').value = '';
        document.getElementById(field + '_name_backup').value = '';
        const input = document.getElementById(field);
        input.value = '';
        input.disabled = false;
        input.style.opacity = '1';
    }
  </script>

</body>
</html>
