<body>
    <div class="container">
        <!-- System Status -->
        <div class="system-status">
            <div class="status-dot"></div>
            <span>System Online</span>
            <div class="status-line"></div>
        </div>
        
        <header>
            <div class="header-content">
                <div class="header-text">
                    <h1><a href="/" class="header-link">CoStar</a></h1>
                    <p><span>&gt;</span> link_scanner <span>//</span> find shared filmographies</p>
                </div>
            </div>
            <nav class="mode-nav" role="tablist" aria-label="Comparison mode">
                <a href="/" 
                   class="mode-tab <%= request.path_info == '/' ? 'active' : '' %>" 
                   role="tab"
                   aria-selected="<%= request.path_info == '/' ? 'true' : 'false' %>">
                    <span class="material-icons">people</span>
                    <span class="mode-label">Actors</span>
                </a>
                <a href="/movies" 
                   class="mode-tab <%= request.path_info == '/movies' ? 'active' : '' %>" 
                   role="tab"
                   aria-selected="<%= request.path_info == '/movies' ? 'true' : 'false' %>">
                    <span class="material-icons">movie</span>
                    <span class="mode-label">Movies</span>
                </a>
            </nav>
        </header>
        
        <%= yield %>
        
        <footer>
            <div class="tmdb-attribution">
                <p><strong>This application uses TMDB and the TMDB APIs but is not endorsed, certified, or otherwise approved by TMDB.</strong></p>
                <p>Data provided by <a href="https://www.themoviedb.org/" target="_blank">The Movie Database (TMDB)</a></p>
                <% if ENV['POSTHOG_API_KEY'] && ENV['RACK_ENV'] != 'development' %>
                <p><small>This site uses analytics to improve user experience. No personal data is collected without consent.</small></p>
                <% end %>
            </div>
            <!-- START INTERNET BLACKSMITH LINK -->
            <p><a href="https://internetblacksmith.dev" target="_blank">Created by Internet Blacksmith</a></p>
            <!-- END INTERNET BLACKSMITH LINK -->
        </footer>
    </div>
    
    <!-- Application modules - loaded after DOM -->
    <script src="/js/modules/error-reporter.js?v=<%= Time.now.to_i %>"></script>
    <script src="/js/modules/snackbar.js?v=<%= Time.now.to_i %>"></script>
    <script src="/js/modules/scroll-to-top.js?v=<%= Time.now.to_i %>"></script>
    <script src="/js/modules/dom-manager.js?v=<%= Time.now.to_i %>"></script>
    <script src="/js/modules/event-manager.js?v=<%= Time.now.to_i %>"></script>
    <script src="/js/modules/analytics-tracker.js?v=<%= Time.now.to_i %>"></script>
    <script src="/js/modules/field-manager.js?v=<%= Time.now.to_i %>"></script>
    <script src="/js/modules/mobile-keyboard.js?v=<%= Time.now.to_i %>"></script>
    <script src="/js/modules/actor-search.js?v=<%= Time.now.to_i %>"></script>
    <script src="/js/app.js?v=<%= Time.now.to_i %>"></script>
    
    <!-- Internet Blacksmith Footer Link - JavaScript fallback for ERB rendering issue -->
    <script>
        (function() {
            function ensureFooterLink() {
                const footer = document.querySelector('footer');
                if (!footer) return;

                if (footer.querySelector('a[href="https://internetblacksmith.dev"]')) {
                    return;
                }

                const p = document.createElement('p');
                const a = document.createElement('a');
                a.href = 'https://internetblacksmith.dev';
                a.target = '_blank';
                a.textContent = 'Created by Internet Blacksmith';
                p.appendChild(a);
                footer.appendChild(p);
            }

            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', ensureFooterLink);
            } else {
                ensureFooterLink();
            }
        })();
    </script>
</body>
</html>
