<div class="search-field-container" id="<%= field %>Container">
    <div class="search-input-field">
        <label class="field-label" for="<%= field %>"><%= label %></label>
        <input type="text" 
               class="search-input" 
               id="<%= field %>"
               placeholder="<%= label %>"
               aria-labelledby="<%= field %>-label"
               hx-get="/api/actors/search" 
               hx-trigger="keyup changed delay:300ms" 
               hx-target="#suggestions<%= suggestion_id %>"
               hx-indicator="#loadingIndicator<%= suggestion_id %>"
               hx-include="this"
               hx-vals='{"field": "<%= field %>"}'
               name="q">
        <div class="suggestions" id="suggestions<%= suggestion_id %>" role="region" aria-label="Actor suggestions" tabindex="0"></div>
        <div class="suggestions-loading htmx-indicator" id="loadingIndicator<%= suggestion_id %>">
            <div class="loading-content">
                <div class="loading-spinner"></div>
                <span class="loading-text">Searching actors...</span>
            </div>
        </div>
    </div>
    <input type="hidden" id="<%= field %>_id" name="<%= field %>_id">
    <input type="hidden" id="<%= field %>_name" name="<%= field %>_name">
</div>
